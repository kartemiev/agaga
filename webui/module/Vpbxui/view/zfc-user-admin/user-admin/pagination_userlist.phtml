<?php if ($this->pageCount): ?>
<div class="pagination pagination-centered pagination-small">
    <ul>

        <!-- First page link -->
        <li<?php echo (isset($this->previous)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->url('zfcadmin/zfcuseradmin/list', array('p' => $this->first)); ?>"><?php echo $this->translate('&lt;&lt; В начало') ?></a>
        </li>

        <!-- Previous page link -->
        <li<?php echo (isset($this->previous)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->url('zfcadmin/zfcuseradmin/list', array('p' => $this->previous-9)); ?>"><?php echo $this->translate('&lt; Предидущие 10') ?></a>
        </li>

        <!-- Numbered page links -->
        <?php foreach ($this->pagesInRange as $page): ?>
        <li<?php echo ($page == $this->current) ? ' class="active"' : ''; ?>>
            <a href="<?php echo $this->url('zfcadmin/zfcuseradmin/list', array('p' => $page)); ?>"><?php echo $page; ?></a>
        </li>
        <?php endforeach; ?>

        <!-- Next page link -->
        <li<?php echo (isset($this->next)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->url('zfcadmin/zfcuseradmin/list', array('p' => $this->next+9)); ?>"><?php echo $this->translate('Следующие 10 &gt;')?></a>
        </li>

        <!-- Last page link -->
        <li<?php echo (isset($this->next)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->url('zfcadmin/zfcuseradmin/list', array('p' => $this->last)); ?>"><?php echo $this->translate('Дальше &gt;&gt;') ?></a>
        </li>

    </ul>
</div>
<?php endif; ?>

